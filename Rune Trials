// Qn 3
function mosaic(rune1, rune2, rune3, rune4) {
    return stack(
        beside(rune4,rune1), 
        beside(rune3, rune2));
}

function upside_down_mosaic(rune1, rune2, rune3, rune4) {
    return turn_upside_down(stack(
        beside(rune4,rune1), 
        beside(rune3, rune2)));
}

// Test
show(upside_down_mosaic(rcross, sail, corner, nova));
// Qn 4
function mosaic(rune1, rune2, rune3, rune4) {
    return stack(
        beside(rune4,rune1), 
        beside(rune3, rune2));
}


function transform_mosaic(rune1, rune2, rune3, rune4, make_cross) {
    return make_cross(stack(
        beside(rune4,rune1), 
        beside(rune3, rune2)));
}

// Test
show(transform_mosaic(rcross, sail, corner, nova, make_cross));
