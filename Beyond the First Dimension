// Qn 1
// feel free to add helper functions!

function fractal(level, transformation, curve){
    return level === 0
    ? curve
    : fractal(level-1,transformation,transformation(curve));
}

function levycize(curve){
    const f = math_sqrt(2) / 2;
    const scaled_curve = (scale(f, f, 1))(curve);
    return connect_rigidly(
        (rotate_around_origin(0, 0, math_PI / 4))(scaled_curve),
        (translate(0.5, 0.5, 0))
            ((rotate_around_origin(0, 0, -math_PI / 4))(scaled_curve)));
}
	    

// test
draw_connected_full_view_proportional(10000)
(fractal(11, levycize, unit_line));
// Qn 2
function fractal(level, transformation, curve){
    return level === 0
    ? curve
    : fractal(level-1,transformation,transformation(curve));
}


function invert(curve) {
    return t => curve(1 - t);
}

function dragonize(c) {
    return put_in_standard_position(connect_ends
                   (invert(rotate_around_origin(-math_PI / 2, undefined, undefined)(c)), c));
}


// Test
draw_connected_full_view_proportional(10000)
(fractal(11, dragonize, unit_line));
// Qn 3
function fractal(level, transformation, curve){
    return level === 0
    ? curve
    : fractal(level-1,transformation,transformation(curve));
}


function kochize(curve){
    const up_60 = rotate_around_origin(math_PI/3,undefined,undefined);
    const down_60 = rotate_around_origin(- math_PI/3,undefined,undefined);
    return put_in_standard_position(connect_ends(curve,connect_ends(up_60(curve),
    connect_ends(down_60(curve), curve)
    )));
}


// Test
draw_connected_full_view_proportional(10000)
(fractal(5, kochize, unit_line));
// Qn 4
function fractal(level, transformation, curve){
    return level === 0
    ? curve
    : fractal(level-1,transformation,transformation(curve));
}


function kochize(curve){
    const up_60 = rotate_around_origin(math_PI/3,undefined,undefined);
    const down_60 = rotate_around_origin(- math_PI/3,undefined,undefined);
    return put_in_standard_position(connect_ends(curve,connect_ends(up_60(curve),
    connect_ends(down_60(curve), curve)
    )));
}

function snowflake(n) {
    const flake_snow = fractal(n, kochize, unit_line);
    const left = rotate_around_origin((2 * math_PI) / 3,undefined,undefined)(flake_snow);
    const right = rotate_around_origin((-2 * math_PI) / 3, undefined, undefined)(flake_snow);
    return connect_ends(left, connect_ends(flake_snow,right));
}


// Test
draw_connected_full_view_proportional(10000)
(snowflake(5));
