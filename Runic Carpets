function persian(rune, count) {
    return stack_frac(1/count, persian_left_right(rune,count)
    ,beside_frac(1/count
    , persian_top_bottom(rune,count-1)
   , beside_frac(1-1/(count-1),
           stack_frac(1-1/(count-1),persian_centre(rune),persian_left_right(rune,count-2))
           , persian_top_bottom(rune, count-1))
           ));
}
function persian_centre(rune) {
    return stack((beside(quarter_turn_right(rune),
    repeat_pattern(2,quarter_turn_right,rune))),
    beside((rune),
    quarter_turn_left(rune)));
}

function persian_left_right(rune,count){
    return count ===1
    ? rune
    : beside_frac(1/count, rune, persian_left_right(rune, count-1));
}

function persian_top_bottom(rune,count){
    return stackn(count,rune);
}
//Test
show(persian(make_cross(rcross), 5));
