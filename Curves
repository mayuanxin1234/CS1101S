// QN 1
function diagonal(t) {
    return make_point(t,t);
}

// Test
 draw_points(50)(diagonal);
 // Qn 2
 function unit_square(t) {
    return t>0.75
    ? make_point(0,(3/4 - t)*4+1)
    : t>0.50
    ? make_point((1/2-t)*4+1, 1)
    : t>0.25
    ? make_point(1, (t-0.25)*4)
    : make_point(t*4, 0);
}


// Test
 draw_connected_full_view_proportional(200)(unit_square);
 
 
 
 
 
 
